<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBugDemoApp2.MainPage">

    <VerticalStackLayout Spacing="12">
        <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
            <Label x:Name="lblEnabled" Text="Enabled label" TextColor="Blue" />
            <Label x:Name="lblDisabled" Text="Disabled label" TextColor="Gray" IsEnabled="false"/>
        </HorizontalStackLayout>
        <Label x:Name="lblEnabledCount" Text="Enabled label taps: 0"/>
        <Label x:Name="lblDisabledCount" Text="Disabled label taps: 0"/>
    </VerticalStackLayout>
</ContentPage>
